<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhihuichengdu.songwei.zhcd">

    <uses-permission android:name="android.permission.INTERNET"/>
   <!-- android:theme="@style/AppTheme.NoActionBar"-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.zhihuichengdu.songwei.zhcd.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PageIndicatorDefaults"></activity>
        <activity
            android:name="com.zhihuichengdu.songwei.zhcd.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.zhihuichengdu.songwei.zhcd.GuideActivity"></activity>
    </application>

</manifest>
